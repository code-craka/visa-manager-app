{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Target latest ES runtime features
    "target": "es2020",
    "module": "commonjs",

    // Enable source maps for debugging
    "sourceMap": true,

    // Generate declaration files for types
    "declaration": true,
    "declarationMap": true,

    // Strict and safe type checks
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // For React JSX support (if any React code in backend?)
    "jsx": "react-jsx",
    "isolatedModules": true,

    // Skip checking library files to speed up compile and avoid type conflicts
    "skipLibCheck": true,
    
    // Module interop settings
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,

    // Module detection & syntax options
    "moduleDetection": "auto",
    "verbatimModuleSyntax": false,


    // Base URL and path aliases for clean imports
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@middleware/*": ["middleware/*"],
      "@migrations/*": ["migrations/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@tests/*": ["__tests__/*"]
    },

    // Include node and jest type definitions for runtime and tests
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  
  // Include all TS/JS files under src, and include types.d.ts if placed outside src
  "include": ["src/**/*", "types.d.ts"],

  "exclude": ["node_modules", "dist"]
}